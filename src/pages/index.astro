---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/sections/Hero.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Experience from "@/components/Experience.astro";
import BriefCase from "@/icons/BriefCase.astro";
---

<BaseLayout
  title="Portfolio de kaisherdev - Desarrollador y programador web" 
  description="contacta a kaisherdev para crear tu aplicación web o móvil. Experto en crear aplicaciones únicas"
  >
  <main class="px-4 dark:text-white">
    <SectionContainer class="py-14 md:py-36">
      <Hero>
        <slot/>
      </Hero>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class=" flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
        <BriefCase class="size-8"/>
        Experiencia laboral
      </h2>
      <Experience/>
    </SectionContainer>
  </main>
</BaseLayout>
