---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/sections/Hero.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Experience from "@/components/Experience.astro";
import BriefCase from "@/icons/BriefCase.astro";
import CodeBracket from "@/icons/codeBracket.astro";
import Projects from "@/components/Projects.astro";
import ProfileCheck from "@/icons/ProfileCheck.astro";
import AboutMe from "@/components/AboutMe.astro";
---

<BaseLayout
  title="Portfolio de kaisherdev - Desarrollador y programador web" 
  description="contacta a kaisherdev para crear tu aplicación web o móvil. Experto en crear aplicaciones únicas"
  >
  <main class="px-4 dark:text-white">
    <SectionContainer class="py-14 md:py-36">
      <Hero>
        <slot/>
      </Hero>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class=" flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
        <BriefCase class="size-8"/>
        Experiencia laboral
      </h2>
      <Experience/>
    </SectionContainer>
    <div class=" space-y-24">
    <SectionContainer id="proyectos">
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-blue-800 dark:text-white">
        <CodeBracket class="size-8 text-black/80 dark:text-white"/>
        Proyectos
      </h2>
      <Projects/>
    </SectionContainer>
    <SectionContainer id="sobre-mi">
      <h2 class="flex mb-6 text-3xl font-semibold items-center gap-x-3 text-sky-800/80 dark:text-white">
        <ProfileCheck class="size-8 text-black/80 dark:text-white"/>
         <span class=" text-blue-800 dark:text-white">Sobre</span>mí
      </h2>
      <AboutMe/>
    </SectionContainer>
  </div>
  </main>
</BaseLayout>
