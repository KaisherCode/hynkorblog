---
import FooterContent from "@/components/FooterContent.astro";
import SocialMedia from "@/components/SocialMedia.astro";
---

<footer class="pt-14 relative flex w-full flex-col place-items-center md:flex-row md:justify-between">
	<hr class="absolute top-0 h-[2px] w-full min-w-[18rem] border-t-0 bg-transparent bg-gradient-to-r from-transparent via-purple-500 to-transparent bg-center md:my-9">
	<FooterContent />
	<hr class="my-12 h-[2px] w-full min-w-[18rem] border-t-0 bg-transparent bg-gradient-to-r from-transparent via-purple-500 to-transparent bg-center md:hidden">
	<SocialMedia />
</footer>
