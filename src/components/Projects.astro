---
import Tailwind from "@/icons/Tailwind.astro";
import LinkButton from "@/components/LinkButton.astro";
import GitHub from "@/icons/github.astro";
import Link from "@/icons/Link.astro";
import AstroIcon from "@/icons/Astro.astro";
const TAGS = {
  ASTRO:{
    name:"Astro",
    class:"bg-[#38bdf8] text-white",
    icon: AstroIcon,
  },
	TAILWIND: {
		name: "Tailwind CSS",
		class: "bg-[#003159] text-white",
		icon: Tailwind,
	},
};

const PROJECTS = [
	{
		title: "Batatabit - Sitio web de intercambio de criptomonedas",
		description:
			"Trae información en tiempo real de las tasas de cambio y las monedas más importantes del mundo.",
		link: "https://batatabit-coin.netlify.app/",
		github: "https://github.com/KaisherCode/batatabit",
		image: "/projects/batatabit.webp",
		tags: [TAGS.TAILWIND,TAGS.ASTRO],
	},
	{
		title: "Waritravels - Sitio de web de destinos turísticos.",
		description:
			"Plataforma donde puedes encontrar información para tu viaje, sitios arqueológicos, y lugares turísticos.",
		link: "https://waritravels.netlify.app",
		github: "https://github.com/KaisherCode/waritravels",
		image: "/projects/waritravels.webp",
		tags: [TAGS.TAILWIND,TAGS.ASTRO],
	},
];
---

<div class="flex flex-col gap-y-16">
	{
		PROJECTS.map(({ title, description, link, image, tags, github }) => (
			<article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 px-4">
				<div class="w-full md:w-1/2">
					<div class="relative h-64 flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
						<img
							loading="lazy"
							src={image}
							alt=""
							class="object-cover object-top w-54 transition duration-500 h-full sm:h-full md:scale-110 md:group-hover:scale-105"
						/>
					</div>
				</div>
				<div class="w-full md:w-1/2 md:max-w-lg">
					<h3 class="text-2xl font-bold text-indigo-500 dark:text-gray-100">
						{title}
					</h3>
					<div class="flex flex-wrap mt-2">
						<ul class="flex flex-row mb-2 gap-x-2">
							{tags.map((tag) => (
								<li>
									<span
										class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
									>
										<tag.icon class="size-4" />
										{tag.name}
									</span>
								</li>
							))}
						</ul>
						<div class="mt-2 text-gray-500/80 dark:text-gray-400">
							{description}
						</div>
						<footer class="flex items-end justify-start mt-4 gap-x-4">
							{github && (
								<LinkButton href={github}>
									<GitHub class="size-4" />
									Code
								</LinkButton>
							)}
							{link && (
								<LinkButton href={link}>
									<Link class="size-4" />
									Preview
								</LinkButton>
							)}
						</footer>
					</div>
				</div>
			</article>
		))
	}
</div>
