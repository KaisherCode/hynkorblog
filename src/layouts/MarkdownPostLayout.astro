---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { fade } from "astro:transitions";

const { frontmatter } = Astro.props;
const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
<div class="w-full">
	<img
		src={frontmatter.image.url}
		class="w-auto rounded-lg mb-5"
		alt={frontmatter.image.alt}
	/>

	<h2 class="font-bold text-3xl">{frontmatter.title}</h2>
	<article>
		Publicado: {frontmatter.pubDate.toString().slice(3, 15)}<span>
			| <span>Escrito por: <a href="/about/">{frontmatter.author}</a></span>
		</span>
		<p transition:animate={fade({ duration: "2s" })}>
			<em>{frontmatter.description}</em>
		</p>

		<div class="flex flex-wrap">
			{
				frontmatter.tags.map((tag) => (
					<p class="tag">
						<a class="text-indigo-500/80" href={`/tags/${tag}`}>{tag}</a>
					</p>
				))
			}
		</div>
		<slot />
	</article>
</div>
</BaseLayout>
<style>
	.tag {
		margin: 0.25em;
		border: dotted 1px #a1a1a1;
		border-radius: 0.5em;
		padding: 0.5em 1em;
		font-size: 1.15em;
		background-color: #f8fcfd;
	}
</style>
